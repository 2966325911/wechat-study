/*商品列表*/
.goodslist {
  display: flex;
  flex-direction: column;
  background-color: white
}

.goodslist .item
{
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee
}

.goodslist .item:last-child {
  border-bottom: none
}

.goodslist .item .pic {
  width: 150rpx;
  height: 150rpx;
  padding: 0 20rpx;
}
.goodslist .item .pic image {
  width: 100%;
  height: 100%;
}

.goodslist .info {
  flex: 1;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  color: #666;
}

.goodslist .info .title{
  font-size: 14px;
  color: #333;
}

.goodslist .tips {
  widows: 100rpx;
}

 .goodslist .tips .score {
  display: block;
  background-color: orangered;
  color: white;
  border-radius: 20rpx;
  font-size: 12px;
  width: 70px;
  text-align: center;
  margin: 0 auto;
} 


